doctype html
html(lang='en')
  head

    // Basic Page Needs
    meta(charset='utf-8')
    title Twitter Client - #{title}
    meta(name='description' content='')
    meta(name='author' content='')

    // Mobile Specific Metas
    meta(name='viewport' content='width=device-width, initial-scale=1')

    // FONTS
    link(href='https://fonts.googleapis.com/css?family=Work+Sans:400,600' rel='stylesheet' type='text/css')

    // CSS
    link(rel='stylesheet' href='../assets/css/animate.css')
    link(rel='stylesheet' href='../assets/css/remodal.css')
    link(rel='stylesheet' href='../assets/css/remodal-default-theme.css')
    link(rel='stylesheet' href='../assets/css/global.css')
    link(rel='stylesheet' href='../assets/css/style.css')

  if (title !== 'Dashboard')
    - var style = 'padding-top:0; display:flex; flex-direction:column; align-items:center; justify-content:center; overflow:auto; height:initial; min-height: 100vh;'   
  body(style=style)
    block content
      
    // Scripts
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='../assets/js/jquery.noty.packaged.min.js')
    script(src='../assets/js/remodal.min.js')
    script(src='../assets/js/app.js')

    block scripts